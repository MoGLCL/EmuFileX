<Window x:Class="EmuFileX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Title="EmuFileX" Height="750" Width="1250" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#5E81AC" SecondaryColor="#88C0D0" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="NordActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="5"/>
                <Setter Property="Background" Value="#434C5E"/>
                <Setter Property="Foreground" Value="#ECEFF4"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3"/>
                        <Setter Property="Background" Value="#4C566A"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#2E3440">
        <TabControl Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="Left">

            <TabItem Header="{materialDesign:PackIcon Kind=HomeVariant, Size=24}" ToolTip="Dashboard">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Android" Height="120" Width="120" HorizontalAlignment="Center" Foreground="#4C566A"/>
                        <TextBlock Text="Welcome to EmuFileX" Style="{StaticResource MaterialDesignHeadline4TextBlock}" Margin="0,20,0,0" Foreground="#ECEFF4"/>
                        <TextBlock Text="Select a connected device to begin." Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Opacity="0.7" HorizontalAlignment="Center" Foreground="#D8DEE9"/>
                        <ComboBox x:Name="EmulatorsComboBox" materialDesign:HintAssist.Hint="Select Connected Device"
                                   Style="{StaticResource MaterialDesignOutlinedComboBox}" Margin="0,40,0,0" Width="300"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="{materialDesign:PackIcon Kind=FolderMultiple, Size=24}" ToolTip="File Explorer">
                <Grid Margin="20">
                    <materialDesign:Card Padding="10" VerticalContentAlignment="Stretch" Background="#3B4252">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TreeView x:Name="DirectoryTreeView" SelectedItemChanged="DirectoryTreeView_SelectedItemChanged" Margin="5"/>
                            <ListView x:Name="FilesListView" Grid.Column="1" Margin="5">
                                <ListView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Delete" Click="DeleteMenuItem_Click"/>
                                        <MenuItem Header="Pull to PC" Click="PullMenuItem_Click"/>
                                    </ContextMenu>
                                </ListView.ContextMenu>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" Width="300">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{Binding IconPath}" Width="16" Height="16" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding Name}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Last Modified" Width="180" DisplayMemberBinding="{Binding LastModified}"/>
                                        <GridViewColumn Header="Size" Width="120" DisplayMemberBinding="{Binding Size}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <TabItem Header="{materialDesign:PackIcon Kind=PackageVariant, Size=24}" ToolTip="App &amp; File Manager">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" Background="#3B4252">
                            <StackPanel>
                                <TextBlock Text="Application Management" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15" Foreground="#ECEFF4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ApkPathTextBox" IsReadOnly="True" Grid.Column="0" materialDesign:HintAssist.Hint="APK File Path" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    <Button x:Name="BrowseApkButton" Style="{StaticResource MaterialDesignIconButton}" Grid.Column="1" Margin="8,0,0,0" Click="BrowseApkButton_Click" ToolTip="Browse for APK">
                                        <materialDesign:PackIcon Kind="FolderOpenOutline"/>
                                    </Button>
                                </Grid>
                                <Button x:Name="InstallApkButton" Style="{StaticResource NordActionButton}" Content="Install Application" Margin="0,15,0,0" Click="InstallApkButton_Click" IsEnabled="{Binding Text.Length, ElementName=ApkPathTextBox}"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="20" Background="#3B4252">
                            <StackPanel>
                                <TextBlock Text="File Transfer" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15" Foreground="#ECEFF4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="PushSourcePath" Grid.Column="0" materialDesign:HintAssist.Hint="PC Source File" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" Grid.Column="1" Margin="8,0,0,0" Click="BrowsePushFile_Click" ToolTip="Select File">
                                        <materialDesign:PackIcon Kind="FileOutline"/>
                                    </Button>
                                </Grid>
                                <TextBox x:Name="PushDestinationPath" Text="/sdcard/Download/" Margin="0,15,0,0" materialDesign:HintAssist.Hint="Emulator Destination Path" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                <Button x:Name="PushButton" Style="{StaticResource NordActionButton}" Content="Push File to Emulator" Margin="0,15,0,0" Click="PushButton_Click" IsEnabled="{Binding Text.Length, ElementName=PushSourcePath}"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="{materialDesign:PackIcon Kind=Information, Size=24}" ToolTip="About &amp; Settings">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="EmuFileX" FontSize="48" FontWeight="Bold" Foreground="#ECEFF4" HorizontalAlignment="Center"/>
                        <TextBlock Text="Programmed by Mohamed Wael (MoGlitch)" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,10,0,30" HorizontalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignToolButton}" Click="Hyperlink_Click" Tag="https://github.com/MoGLCL" Content="{materialDesign:PackIcon Kind=Github, Size=24}"/>
                            <Button Style="{StaticResource MaterialDesignToolButton}" Click="Hyperlink_Click" Tag="https://www.linkedin.com/in/mohamed-wael-elghanm-62b267363/" Content="{materialDesign:PackIcon Kind=Linkedin, Size=24}"/>
                            <Button Style="{StaticResource MaterialDesignToolButton}" Click="Hyperlink_Click" Tag="https://www.instagram.com/marco_eg2004/" Content="{materialDesign:PackIcon Kind=Instagram, Size=24}"/>
                            <Button Style="{StaticResource MaterialDesignToolButton}" Click="Hyperlink_Click" Tag="https://www.facebook.com/marcoelghnam" Content="{materialDesign:PackIcon Kind=Facebook, Size=24}"/>

                            <Button Style="{StaticResource MaterialDesignToolButton}" Click="Hyperlink_Click" Tag="https://discord.gg/gs9V4wPZ" Content="{materialDesign:PackIcon Kind=Forum, Size=24}"/>
                        </StackPanel>

                        <Separator Style="{StaticResource MaterialDesignDarkSeparator}" Margin="0,30"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="ThemeLightDark" VerticalAlignment="Center"/>
                            <TextBlock Text="Toggle Theme" VerticalAlignment="Center" Margin="8,0"/>
                            <ToggleButton x:Name="ThemeToggle" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="False" Click="ThemeToggle_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="MainSnackbar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="25"/>
    </Grid>
</Window>